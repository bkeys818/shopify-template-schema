{
    "name": "shopify-template-schema",
    "version": "0.1.1",
    "description": "A tool for converting Shopify schemas into a JSON schema for templates.",
    "main": "./dist/index.js",
    "files": [
        "dist/**/*.js",
        "dist/**/*.d.ts",
        "bin/**/*.js"
    ],
    "bin": "bin/cli.js",
    "scripts": {
        "prepare": "husky install",
        "prebuild": "rimraf dist",
        "build": "tsc -p src/tsconfig.json && tsc -p bin/tsconfig.json",
        "test": "jest --coverage"
    },
    "keywords": [
        "shopify",
        "schema"
    ],
    "author": "Ben Keys (https://github.com/bkeys818)",
    "license": "MIT",
    "lint-staged": {
        "*.{js,ts}": [
            "prettier -w",
            "eslint --cache"
        ],
        "*.md": "prettier -w",
        "*.{json,jsonc}": "prettier -w"
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@tsconfig/node14": "^1.0.1",
        "@types/jest": "^27.4.1",
        "@types/jest-json-schema": "^6.1.0",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "babel-jest": "^27.5.1",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-json-schema": "^6.1.0",
        "lint-staged": "^12.3.7",
        "prettier": "^2.6.2",
        "rifraf": "^2.0.3",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "commander": "^9.1.0"
    }
}
